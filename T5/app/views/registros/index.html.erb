<table>
  <thead>
    <tr>
      <th colspan="3"><h1 class="heading">Lista de Registros</h1></th>
      <th colspan="2"></th>
    </tr>
    <tr>
      <th><strong>Nome</th>
      <th><strong>Criado em</th>
      <th><strong>Atualizado em</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @registros.each do |registro| %>
      <tr>
        <td><%= registro.nome %></td>
        <td><%= registro.created_at %></td>
        <td><%= registro.updated_at %></td>
        <td><%= link_to 'Mostrar', registro %></td>
        <% if session[:admin] %>
          <td><%= link_to 'Editar', edit_registro_path(registro) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

 <% if session[:admin] %>
  <tfoot>
    <tr>
      <td colspan="5">
        <div class="button-group">
          <%= link_to 'Novo Registro', new_registro_path %>
        </div>
      </td>
    </tr>
  </tfoot>
  <% end %>
</table>
